<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @*chèn link css của free template*@
    <link href="~/Content/NguoiDungCssLayout/fonts.css" rel="stylesheet" />
    <link href="~/Content/NguoiDungCssLayout/screen.css" rel="stylesheet" />
    @*chèn css tự thiết kế*@
    <link href="~/Content/NguoiDungCssLayout/NguoiDungCssLayout.css" rel="stylesheet" />
    @*chèn link css, javasript của novislider*@
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/NivoSlider/jquery.nivo.slider.js"></script>
    <script src="~/NivoSlider/jquery.nivo.slider.pack.js"></script>
    <link href="~/NivoSlider/nivo-slider.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.5.0/css/all.css" integrity="sha384-B4dIYHKNBt8Bc12p+WXckhzcICo0wtJAoU8YZTY5qE0Id1GSseTk6S+L3BlXeVIU" crossorigin="anonymous">
</head>
<body>
    
    <div id="ToanTrang">
        <section class="blank">
            <div class="flash">
                @*tạo div đăng ký đăng nhập*@
                <div class="DangKyDangNhap">
                    @Html.Action("GioHangPartial","GioHang")
                    @*@Html.ActionLink("Đăng ký", "DangKy", null, htmlAttributes: new { @class = "DangKy" })*@
                    <a href="@Url.Action("DangKy","NguoiDung")" class="DangKy">Đăng ký</a>
                    @*@Html.ActionLink("Đăng nhập", "DangNhap", null, htmlAttributes: new { @class = "DangNhap" })*@
                    <a href="@Url.Action("DangNhap","NguoiDung")" class="DangNhap">Đăng nhập</a>
                </div>
            </div>
            @*xây dựng div menu bên phải*@
            <div class="flash success" id="divDanhMuc">
                @*hộp thoại tìm kiếm*@
                <div id="txtTimKiem">
                    @using (Html.BeginForm("KetQuaTimKiem","TimKiem",FormMethod.Post))
                    {
                        @Html.TextBox("txtTimKiem", "", htmlAttributes: new { @class = "TextBoxTimKiem", @placeholder = "Nhập từ khóa cần tìm" })
                        @*chèn vào imgae button tìm kiếm*@
                        <div id="divHinhAnhTimKiem">
                            <button type="submit">
                                <img src="~/HinhAnh/images.png" />
                            </button>
                        </div>
                    }

                </div>
                @*menu bên phải header*@
                <ul class="navMenu">
                    <li>
                        <a href="#">Trang chủ</a>
                    </li>
                    <li>
                        <a href="#">Giới thiệu</a>
                    </li>
                    <li>
                        <a href="#">Liên hệ</a>
                    </li>
                    <li>
                        <a href="#">Hướng dẫn</a>
                    </li>
                    <li>
                        <a href="#">Sách</a>
                    </li>
                </ul>
            </div>
        </section>

        <section>
            @*div Menu bên trái*@
            <div id="divMenuLeft">
                @*chèn vào partial view sách mới*@
                <div class="activity">

                    @Html.Action("SachMoiPartial","Sach")
                    
                </div>
            </div>

            @*chèn div nivo slider*@
            <div id="slider" class="nivoSlider">

                <img src="~/HinhAnh/razer_respawn-1920x1200.jpg" />
                <img src="~/HinhAnh/s139i1N.jpg" />
                <img src="~/HinhAnh/thumb-1920-922275.png" />
            </div>
            <div style="clear:both"></div>
        </section>
        @*div body*@
        <div id="NoiDung">
            @RenderBody()
        </div>
        @*Phần chủ đề*@
        <section>
            <div>
                @Html.Action("ChuDePartial", "ChuDe")
            </div>

            <hr>

        </section>

        @*div Nhà xuất bản*@
        <section class="blank items">
            <div id="divLeft">
                <div class="item">
                    <div class="item-info">
                        <h1>Nhà xuất bản</h1>
                        @Html.Action("NhaXuatBanPartial", "NXB")
                        <img src="http://lorempixel.com/400/300/" alt="Image">
                    </div>
                </div>
            </div>
            <div id="divRight">

                @RenderSection("NoiDUngBenPhai", false)

            </div>
            <div style="clear:both"></div>
            <div>
                <a href="#" class="button button-buy">Buy button (full width for columns)</a>
            </div>
</section>
    </div>

    @*script chạy nivo slider*@
    <script type="text/javascript">
        $(window).on('load', function () {
            $('#slider').nivoSlider({
                controlNav: false,
                nextText: '',
                prevText:'',
            });
        });
    </script>
</body>
</html>
