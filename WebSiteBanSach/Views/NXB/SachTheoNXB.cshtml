@using WebSiteBanSach.Models;
@model List<Sach>


@{
    ViewBag.Title = "SachTheoNXB";
    Layout = "~/Views/Lay_out/NguoiDungLayout.cshtml";
}


@{int i = 0; }
@foreach (var item in Model)
{
    i++;
    <div id="SanPham">
        <div id="AnhBia"><img src="@Url.Content("~/HinhAnhSP/"+item.AnhBia)" width="100" height="150" /></div>
        <div id="TenSach">@item.TenSach</div>
        <div id="DonGia">@item.GiaBan</div>
    </div>
    if (i % 3 == 0)
    {
        <div style="clear:both"></div>
    }
}
