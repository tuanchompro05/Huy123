@using WebSiteBanSach.Models;
@model Sach
@{
    ViewBag.Title = "XemChiTiet";
    Layout = "~/Views/Lay_out/NguoiDungLayout.cshtml";
}

@*css trang xem chi tiết*@
<style>
    /*ẩn div body*/
    #divNoiDungBenPhai{
        display:none;
    }
    /*ẩn slider. Ghi chú: thẻ section bên trang NguoiDungLayout.cshtml*/
    #divMenuSlider{
        display:none;
    }
</style>

@section NoiDungBenPhai{
    @*thông tin sách chi tiết*@
    @*hình ảnh*@
    <div id="HinhAnh">
        <img src="@Url.Content("~/HinhAnhSP/"+Model.AnhBia)" />
    </div>
    @*THÔNG TIN*@
    <div id="ThongTin">
        <div id="TenSach">@Model.TenSach</div>
        <div id="ChuDe">Chủ đề : @ViewBag.TenChuDe</div>
        <div id="NhaXuatBan">Nhà xuất bản : @ViewBag.TenNXB</div>
        <div id="MoTa">Nội dung tóm tắt : @Model.MoTa<br /></div>
        @*dịch dấu chấm động đơn giá sử dụng string.Format("{0:0,0}",tham số)*@
        <div id="Gia"><span style="color:green; font-weight:normal;">Đơn giá</span><br /><span id="Gia"> @string.Format("{0:0,0}", Model.GiaBan) VNĐ</span></div>
        <br />
        @using (Html.BeginForm("ThemGioHang", "GioHang", new { @iMaSach = Model.MaSach, @strURL = Request.Url.ToString() }))
        {
            <input type="submit" style="cursor:pointer" value="Mua hàng &#xf07a;" id="btnGioHang" class="btn btn-primary" />
        }

    </div>
    <div style="clear:both"></div>
    }

@*css thông tin sách*@
<style>
    #HinhAnh{
        float:left;
    }
    #ThongTin{
        float:left;
        width:600px;
    }
    #TenSach{
        font-size:20pt;
        font-weight:normal;
        height:auto;
        word-break:break-word; /*canh nội dung tự động xuống dòng*/
        color:red;
    }
    #ChuDe #NhaXuatBan {
        font-size: 15pt;
        font-weight: normal;
        color:black;
        height:auto;
    }
    #MoTa {
        font-weight:normal;
        color: black;
        word-break: break-word;
        height: auto;
    }
    #Gia span#Gia {
        font-size: 25pt;
        font-weight: normal;
        color: orange;
        height: auto;
    }
    #btnGioHang{
        font-family:'Segoe UI';
        background-color:red;
    }
    #btnGioHang:hover{
        background-color:#a30a11;
    }
</style>