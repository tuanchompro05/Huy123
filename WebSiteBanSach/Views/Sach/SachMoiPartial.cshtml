@using WebSiteBanSach.Models;
@*định nghĩa kiểu dữ liệu cho biến Model*@
@model List<Sach>

<h1 class="item-header">Sách mới</h1>

@{
    foreach (var item in Model)
    {
<div class="activity-list-update">
    <img src="@Url.Content("~/HinhAnhSP/"+item.AnhBia)" width="50" height="50" alt="Image">
    @*nếu tên sách dài hơn 10 ký tự thì chúng ta sẽ cắt tên sách ra lấy từ ký tự 0 đến ký tự 10*@
    @if (item.TenSach.Length > 10)
    {
        <p><strong title="@item.TenSach">Tiêu đề: @item.TenSach.Substring(0, 10)...</strong> <br /> <a href="@Url.Action("XemChiTiet", new { @MaSach=item.MaSach })">Xem chi tiết</a>.</p>
    }
    else
    {
        <p><strong title="@item.TenSach">Tiêu đề: @item.TenSach</strong> <br /> <a href="@Url.Action("XemChiTiet", new { @MaSach=item.MaSach })">Xem chi tiết</a>.</p>

    }
    <div class="clear"></div>
</div>
    }
}

<a href="#" class="item-footer green">
    Sách loại mới nhất
</a>
